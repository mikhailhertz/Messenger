<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPaneBorder" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" stylesheets="@style.css"
      fx:controller="com.messenger.Controller"
      onMouseMoved="#borderMouseMoved" onMouseDragged="#borderMouseDragged" onMousePressed="#borderMousePressed"
      onMouseReleased="#borderMouseReleased" onMouseEntered="#borderMouseEntered" onMouseExited="#borderMouseExited">
   <children>
      <VBox fx:id="vBox" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
         onMouseEntered="#vBoxMouseEntered" onMouseExited="#vBoxMouseExited">
         <children>
            <AnchorPane fx:id="anchorPaneTitlebar" prefHeight="15.0"
               onMousePressed="#titlebarMousePressed" onMouseDragged="#titlebarMouseDragged" onMouseReleased="#titlebarMouseReleased">
               <children>
                  <Button fx:id="closeButton" AnchorPane.rightAnchor="0.0" mnemonicParsing="false"
                     onAction="#closeButtonAction" />
                  <Label fx:id="titleLabel" text="" AnchorPane.leftAnchor="0.0" />
               </children>
            </AnchorPane>
            <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
            <HBox fx:id="hBox" spacing="5.0">
               <children>
                  <TextField fx:id="textField" HBox.hgrow="ALWAYS" />
                  <Button fx:id="sendButton" defaultButton="true" mnemonicParsing="false"
                     onAction="#sendButtonAction"/>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
   </padding>
</AnchorPane>
